@model CAT.Models.Entities.Main.Company

@{
    ViewData["Title"] = "Company Details";
}

<h1>Company details</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Line1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.Line1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Line2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.Line2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class = "col-sm-2">
            Postal code
        </dt>
        <dd class = "col-sm-10">
