<!DOCTYPE html>
<html lang="en">
@Html.AntiForgeryToken()
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="XSRF-TOKEN" content="@Context.Request.Cookies["XSRF-TOKEN"]">

    <title>@ViewData["Title"] - CAT</title>

    <!-- Font awesome CSS CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 bg-warning-subtle">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CAT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Admin dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="clientsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="clientsDropdown">
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="AdminUsers" asp-action="Index">Admin users</a></li>
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Quotes" asp-action="Create">Reports</a></li>
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Quotes" asp-action="Index">Rates</a></li>
                            </ul>
                        </li>
                        <!-- Operations dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="operationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Operations
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="operationsDropdown">
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Jobs" asp-action="Index">Jobs</a></li>
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Monitoring" asp-action="Index">Monitoring</a></li>
                            </ul>
                        </li>

                        <!-- Clients dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="clientsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Clients
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="clientsDropdown">
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Companies" asp-action="Index">Companies</a></li>
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Quotes" asp-action="Create">Quote Calculator</a></li>
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Quotes" asp-action="Index">Quotes</a></li>
                            </ul>
                        </li>

                        <!-- Linguists dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="clientsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Linguists
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="clientsDropdown">
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Companies" asp-action="Index">Administration</a></li>
                                <li><a class="dropdown-item" asp-area="BackOffice" asp-controller="Quotes" asp-action="Create">Recruitment</a></li>
                            </ul>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CAT main app - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS, Popper.js CDN (for certain Bootstrap components like modals, tooltips) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (Context.Items.ContainsKey("RequiresValidation"))
    {
        <text>
            <!-- Add jQuery Validate -->
            <script src=https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/js/bootstrap-multiselect.min.js"></script>
            
            <!-- Add jQuery Validate Unobtrusive -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
        </text>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>