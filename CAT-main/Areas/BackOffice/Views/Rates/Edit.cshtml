@model CAT.Models.Entities.Main.Rate

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SourceLanguageId" class="control-label">Source language</label>
                <input name="SourceLanguageId" class="form-control" disabled value="@ViewBag.Languages[Model.SourceLanguageId]" />
            </div>
            <div class="form-group">
                <label asp-for="TargetLanguageId" class="control-label">Target language</label>
                <input name="TargetLanguageId" class="form-control" disabled value="@ViewBag.Languages[Model.TargetLanguageId]" />
            </div>
            <div class="form-group">
                <label asp-for="Speciality" class="control-label">Speciality</label>
                <input name="Speciality" class="form-control" disabled value="@ViewBag.Specialities[Model.Speciality]" />
            </div>
            <div class="form-group">
                <label asp-for="Task" class="control-label">Task</label>
                <input name="Task" class="form-control" disabled value="@ViewBag.Tasks[Model.Task]" />
            </div>
            <div class="form-group">
                <label asp-for="RateToClient" class="control-label">Client rate</label>
                <input asp-for="RateToClient" class="form-control" />
                <span asp-validation-for="RateToClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RateToTranslator" class="control-label">Linguist rate</label>
                <input asp-for="RateToTranslator" class="form-control" />
                <span asp-validation-for="RateToTranslator" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
