        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
    </dl>

    <div class="form-group">
        <button id="processJobBtn" class="btn btn-primary" data-job-id="@Model?.Id">Process Job</button>
    </div>

</div>
