@model JobViewModel

@{
    ViewData["Title"] = "Details";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#processJobBtn").click(function () {
                var jobId = $(this).data("job-id");
                //var token = $('meta[name="XSRF-TOKEN"]').attr('content');
                var token = $('input[name="__RequestVerificationToken"]').val();


                $.ajax({
                    url: '/Jobs/ProcessJob',
                    type: 'POST',
                    headers: {
                        "XSRF-TOKEN": token
                    },
                    data: { id: jobId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);  // Show a success message.
                        } else {
                            alert(response.message);  // Show an error message.
                        }
                    },
                    error: function () {
                        alert('An error occurred while processing the job.');
                    }
                });
            });
        });
    </script>
}

<h1>Details</h1>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalFileName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OriginalFileName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
